<view class="space"></view>
<view class="flow">

  <view class="flow1" wx:if="{{ifshow1}}">
    <picker bindchange="bindPickerChange1" value="{{index}}" range="{{realArray}}" disabled="{{disabled1}}">
      <view class="picker" >
        <text class="pickertext" style="background-color:{{pickercolor1}}">{{text1}}</text>
      </view>
    </picker>
    <view class="describetext">
    <text>1号</text>
    </view>
  </view>

  <view class="flow1" wx:if="{{ifshow2}}">
    <picker bindchange="bindPickerChange2" value="{{index}}" range="{{realArray}}" disabled="{{disabled2}}">
      <view class="picker">
        <text class="pickertext" style="background-color:{{pickercolor2}}">{{text2}}</text>
      </view>
    </picker>
    <view class="describetext">
      <text>2号</text>
    </view>
  </view>
</view>


<view class="space2"></view>
<view class="resultText"><text id="resultText">{{resultText}}</text></view>
<view class="buttonGroup">
  <button type="primary" bindtap="getResult">开</button>
  <button type="primary" bindtap="reStart">重置</button>
</view>
  
